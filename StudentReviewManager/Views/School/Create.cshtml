@model StudentReviewManager.PL.VM.School.CreateSchoolVM
@{
    ViewData["Title"] = "Create School";
}
<h2>Create School</h2>
<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" required />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <input asp-for="Description" class="form-control" required />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CityId">City</label>
        <select asp-for="CityId" class="form-control" asp-items="@(new SelectList(Model.Cities, "Id", "Name"))" required></select>
        <span asp-validation-for="CityId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CoursesIDs">Courses</label>
        <select asp-for="CoursesIDs" class="form-control" asp-items="@(new MultiSelectList(Model.Courses, "Id", "Name"))" multiple="multiple" required></select>
        <span asp-validation-for="CoursesIDs" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
