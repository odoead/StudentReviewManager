@model StudentReviewManager.PL.VM.Search.SearchVM
@{
    ViewData["Title"] = "Search Results";

    string Truncate(string value, int maxLength)
    {
        if (string.IsNullOrEmpty(value)) return value;
        return value.Length <= maxLength ? value : value.Substring(0, maxLength) + "...";
    }
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
        }

        .btn {
            margin-right: 0.5rem;
        }

        h1 {
            margin-bottom: 1rem;
            display: flex;
            align-items: center;
        }

            h1 i {
                margin-right: 0.5rem;
            }

        .container {
            margin-top: 2rem;
        }

        .card {
            margin-bottom: 1.5rem;
            border: none;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .card-body {
            padding: 1.5rem;
        }

        .card-title {
            margin-bottom: 0.75rem;
            display: flex;
            align-items: center;
        }

            .card-title i {
                margin-right: 0.5rem;
            }

        .card-subtitle {
            margin-bottom: 1rem;
            display: flex;
            align-items: center;
            color: #6c757d;
        }

            .card-subtitle i {
                margin-right: 0.5rem;
            }

        .card-text {
            display: flex;
            align-items: center;
            margin-bottom: 0.75rem;
        }

            .card-text i {
                margin-right: 0.5rem;
                color: #6c757d;
            }

            .card-text strong {
                margin-right: 0.5rem;
            }

        .card-actions {
            margin-top: 1rem;
        }

        .truncate {
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }

        .fa-school {
            color: #6c757d;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1><i class="fas fa-search"></i> Search Results for "@Model.SearchQuery"</h1>

        <h2>Schools</h2>
        <div class="row">
            @foreach (var school in Model.Schools)
            {
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title"><i class="fas fa-school"></i> @Html.DisplayFor(modelItem => school.Name)</h5>
                            <p class="card-text truncate" title="@school.Description"><i class="fas fa-info-circle"></i> @Truncate(school.Description, 30)</p>
                            <p class="card-text"><i class="fas fa-city"></i> <strong>City:</strong> @Html.DisplayFor(modelItem => school.CityName)</p>
                            <p class="card-text"><i class="fas fa-star"></i> <strong>Average Rating:</strong> @Html.DisplayFor(modelItem => school.AverageRating)</p>
                            <div class="card-actions">
                                <a class="btn btn-info" href="/School/Details/@school.Id">Details</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <h2>Courses</h2>
        <div class="row">
            @foreach (var course in Model.Courses)
            {
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title"><i class="fas fa-chalkboard-teacher"></i> @Html.DisplayFor(modelItem => course.Name)</h5>
                            <p class="card-text truncate" title="@course.Description"><i class="fas fa-info-circle"></i> @Truncate(course.Description, 30)</p>
                            <p class="card-text"><i class="fas fa-graduation-cap"></i> <strong>Specialty:</strong> @Html.DisplayFor(modelItem => course.SpecialtyName)</p>
                            <p class="card-text"><i class="fas fa-university"></i> <strong>Degree:</strong> @Html.DisplayFor(modelItem => course.DegreeName)</p>
                            <p class="card-text"><i class="fas fa-school"></i> <strong>School:</strong> @Html.DisplayFor(modelItem => course.SchoolName)</p>
                            <p class="card-text"><i class="fas fa-star"></i> <strong>Average Rating:</strong> @Html.DisplayFor(modelItem => course.AverageRating)</p>
                            <div class="card-actions">
                                <a class="btn btn-info" href="/Course/Details/@course.Id">Details</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/NewFolder/Scripts.js"></script>
</body>
</html>
