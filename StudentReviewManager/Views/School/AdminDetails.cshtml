@model StudentReviewManager.DAL.Models.School
@{
    ViewData["Title"] = "School Details";
}
<h1>@Model.Name</h1>
<p>@Model.Description</p>
<p>City: @Model.City.Name</p>
<p>Average Rating: @* Calculate average rating here *@</p>
<h2>Courses</h2>
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Specialty</th>
            <th>Degree</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var course in Model.Courses)
        {
            <tr>
                <td>@course.Name</td>
                <td>@course.Description</td>
                <td>@course.Specialty.Name</td>
                <td>@course.Degree.Name</td>
            </tr>
        }
    </tbody>
</table>
<h2>Reviews</h2>
<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Content</th>
            <th>Rating</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var review in Model.Reviews)
        {
            <tr>
                <td>@review.Title</td>
                <td>@review.Content</td>
                <td>@review.Rating</td>
                <td>
                    <a asp-action="DeleteReview" asp-route-id="@review.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<h2>Reviews by Month</h2>
<div id="reviewChart"></div>
@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Fetch review data and generate chart
        const data = {
            labels: [/* Months */],
            datasets: [{
                label: 'Reviews by Month',
                data: [/* Data */],
                backgroundColor: 'rgba(54, 162, 235, 0.2)',
                borderColor: 'rgba(54, 162, 235, 1)',
                borderWidth: 1
            }]
        };
        const config = {
            type: 'bar',
            data: data,
            options: {
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        };
        new Chart(document.getElementById('reviewChart'), config);
    </script>
}
